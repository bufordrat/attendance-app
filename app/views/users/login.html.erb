<div class="row">
  <div class="btn-toolbar">
    &nbsp;
  </div>
  <div class="col-sm-4">
  </div>
  <div class="col-sm-4">

    <h1> Welcome to the attendance app! </h1>
    
    <%= form_tag("/sessions", method: 'post') do  %>

    <div class="form-group">
      <%= label_tag :cnetid, "your cnetid (just your username)" %>
      <%= text_field_tag :cnetid, "", autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :password, "password" %>
      <%= password_field_tag :password, "", class: 'form-control' %>
    </div>

    <%= submit_tag "Log In", class: 'btn btn-success pull-left'%>

    <% end %>

    <%= form_tag("/users/new", method: 'get') do  %>
    <%= submit_tag "Create an Account", class: 'btn btn-success pull-right'%>
    <% end %>

    
  </div>

  <div class="col-sm-4">
  </div>
</div>
