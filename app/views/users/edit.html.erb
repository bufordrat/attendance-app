<div class="row">
  <div class="col-sm-4">
  </div>
  <div class="col-sm-4">

    <%= form_tag("/users/#{@student.id}", method: 'patch') do %>

    <div class="form-group">
      
      <p>
	<%= label_tag :title, "Change student's cnetid:" %>
	<%= text_field_tag :cnetid, @student.cnetid, autofocus: true, class: 'form-control' %>
      </p>
      
      <p>
	<%= label_tag :meeting, "Change student's password:" %>
	<%= password_field_tag :password, @student.password, autofocus: true, class: 'form-control' %>
      </p>

      <p>
	<%= submit_tag "Save Changes to This Student", class: 'btn btn-success center-block'%>
      </p>

    </div>
    <% end %>
  </div>
  <div class="col-sm-4">
  </div>
</div>
