<div class="row">
  <div class="col-sm-3">
  </div>
  <div class="col-md-6">
    <h2 class="text-center">
      Student Roster for:
    </h2>
    <h3 class="text-center">
      <%= @course.title %>, <%= @course.quarter %> '<%= @course.year %>
    </h3>

    <br>
    <% if User.count > 1 %>
      <table class="table table-striped table-bordered">
	<thead>
          <th>Student</th>
          <th>Absences</th>
	  <th> </th>
	  <th> </th>
	</thead>
	<% @student_array.each do |stud| %>
        <tr>
          <td><%= link_to stud.cnetid, "/users/#{stud.id}" %></td>
          <td><%= stud.absence_array.count %></td>
	  <td>
	    <%= link_to 'edit this student', "/users/#{stud.id}/edit" %>
	  </td>
	  <td>
	    <%= link_to 'drop this student', "/users/#{stud.id}", method: 'delete', data: { confirm: "Are you sure?  You should only delete this student if they dropped the class." } %>
	  </td>
        </tr>
	<% end %>
      </table>
    <% else %>
    <h4 class="text-center"> You don't have anyone enrolled yet. </h4>  
    <% end %>

      
      <div class="col-sm-4">
      </div>

      <div class="col-sm-4">
      </div>
  </div>
  <div class="col-sm-3">
  </div>
</div>
